/* Breakpoints */



/* 900px */
@media (max-width: 900px) {
    .calendar-container, .pricebar-container, .tilmeldt-container {
        margin-left: 5rem;
        margin-right: 5rem;
            padding: 8rem 2rem 2rem 8rem;
    }

    #pricebar-heading, #pricebar-subheading {
        margin-right: 10rem;
    }

    #pricebar-image {
        width: 70%;
    }

    .icons {
        margin-left: 5rem;
        margin-right: 5rem;
    }

    #tilmeldt-heading {
        margin-right: 10rem;
    }
     #tilmeldt-subheading {
        margin-left: 6rem;
    }

    input {
        width: 50%;
        margin-left: 2rem;
    }
    #calendar-image{
    margin-left: -5rem;
}
}

/* 768px */
@media (max-width: 768px) {
    .calendar-container, .pricebar-container, .tilmeldt-container {
        margin-left: 3rem;
        margin-right: 3rem;
    }

    #pricebar-heading, #pricebar-subheading {
        margin-right: 5rem;
    }

    #pricebar-image {
        width: 60%;
    }

    .icons {
        grid-template-columns: 1fr 1fr;
        margin-left: 6rem;
        /* margin-right: 2rem; */
    }
